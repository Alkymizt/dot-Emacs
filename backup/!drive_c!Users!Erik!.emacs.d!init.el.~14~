;; init.el
;; Created By: Erik P Almaraz 2019.05.10
;;

;;
;; Setup System Environment
;;

;;
;; Load Init Files
;;
(let* ( ;; Define local variables here...
       (utils      "~/.emacs.d/elisp/utils.el")
       (emacs-conf "~/.emacs.d/emacs-conf.el")
       (melpa-conf "~/.emacs.d/melpa-conf.el")
       (theme-conf "~/.emacs.d/theme-conf.el")
       (tidee-conf "~/.emacs.d/tidee-conf")
       (erc-conf "~/.emacs.d/erc-conf")
       (pwsh "~/.emacs.d/elisp/pwsh.el")
       ;; load last
       )
  ;; Load packages here...
  (load utils)
  (load emacs-conf)
  (load melpa-conf)
  (load theme-conf)
  (load tidee-conf)
  (load erc-conf)
  (load pwsh)
  ;; load last
  )

;;
;; Tools
;;
(require 'aes)
(aes-enable-auto-decryption)

(autoload 'pwsh "pwsh" "Run PowerShell as a shell within emacs." t)
;;(put 'dired-find-alternate-file 'disabled nil)
